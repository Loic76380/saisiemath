{
  "apps": [
    {
      "name": "saisiemath-backend",
      "cwd": "/opt/saisiemath/backend",
      "script": "uvicorn",
      "args": "server:app --host 0.0.0.0 --port 8001",
      "interpreter": "python3",
      "env": {
        "NODE_ENV": "production",
        "MONGO_URL": "mongodb://localhost:27017",
        "DB_NAME": "saisiemath"
      },
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "500M",
      "error_file": "/var/log/pm2/saisiemath-backend-error.log",
      "out_file": "/var/log/pm2/saisiemath-backend-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z"
    }
  ]
}
